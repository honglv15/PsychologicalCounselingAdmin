<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.dhl.mapper.MenuInfoMapper">

    <sql id="Base_Column_List">
        menu_id
        , menu_name, menu_url, menu_pid
    </sql>

    <select id="getMenuById" resultType="per.dhl.pojo.MenuInfo">
        SELECT
            *
        FROM
            menu_info a
                INNER JOIN role_menu_info b ON a.menu_id=b.menu_id
                INNER JOIN role_info c ON b.role_id=c.role_id
        where b.role_id = #{roleId}
    </select>
</mapper>

